<h1>New Post</h1>
<div class="row justify-content-center">
    <%= form_with model: @fbr do |form| %>
      <div class="form-group">
        <%= form.label :Name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :Bank %>
        <%= form.text_field :bank, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Tex %>
        <%= form.text_field :tex, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>