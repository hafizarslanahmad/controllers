<h1>Tvs#index</h1>
<td><%= link_to 'new create', new_tv_path%></td>

<div class="row justify-content-center">
  <table class="table table-bordered">
     <thead>
        <tr>
           <th scop='col'>Name</th>
           <th scop='col' colspan="3" >Action</th>
        </tr>
     </thead>
     <tbody>
       <% @tvs.each do |tv|%>
        <tr> 
           <td><%= tv.name %></td>
           <td><%= link_to 'Show', tv_path(tv.id)%></td>
           <td><%= link_to 'Edit', edit_tv_path(tv.id)%></td>
           <td><%= button_to 'Delete', tv_path(tv.id), method: 'delete'%></td>
        </tr>
       <%end%> 
     </tbody>
  </table>
</div>
