<h1>Index Page </h1>


<div class="row justify-content-center">
    <table class="table table-bordered">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        
        <th scope="col" colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |cust| %>
        <tr>
            <th scope="row">#</th>
            <td><%= cust.first_name %></td>
            <td><%= link_to 'Show', customer_path(cust.id) %></td> 
            <td><%= link_to 'Edit', edit_customer_path(cust.id) %></td> 
            <td><%= button_to 'Delete', customer_path(cust), method: 'delete' %></td>            
        </tr>
        <% end %>
    </tbody>
    </table>
</div>